<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.opu.pnit.Lab_6_7">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ua.opu.pnit.Lab_6_7.MyNotepad"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:allowClearUserData="true"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ua.opu.pnit.Lab_6_7.login.LoginActivity"></activity>
        <activity
            android:name="ua.opu.pnit.Lab_6_7.splash.SplashActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ua.opu.pnit.Lab_6_7.MainActivity" />
        <activity android:name="ua.opu.pnit.Lab_6_7.NoteActivity" />
    </application>

</manifest>